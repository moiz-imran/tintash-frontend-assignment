{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": false,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "build",
    ".next"
  ],
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/api/auth0.js",
    "src/lib/gtag.js"
  ]
}
